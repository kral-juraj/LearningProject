<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.InspectionListController">

    <!-- Left Sidebar with Buttons -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">
            <!-- Hive Selector -->
            <VBox spacing="5">
                <Label text="%label.select_hive" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <ComboBox fx:id="hiveComboBox" maxWidth="Infinity" promptText="%label.select_hive_prompt"/>
            </VBox>
            <Separator/>

            <Button fx:id="addButton" text="%button.add_inspection" onAction="#handleAddInspection" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="viewButton" text="%button.view" onAction="#handleViewInspection" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="deleteButton" text="%button.delete" onAction="#handleDeleteInspection" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Separator/>
            <Button text="%button.refresh" onAction="#handleRefresh" maxWidth="Infinity" style="-fx-padding: 8;"/>
        </VBox>
    </left>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="inspectionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="%table.date" prefWidth="180"/>
                <TableColumn fx:id="temperatureColumn" text="%table.temperature" prefWidth="100"/>
                <TableColumn fx:id="strengthColumn" text="%table.strength" prefWidth="80"/>
                <TableColumn fx:id="broodFramesColumn" text="%table.brood_frames" prefWidth="120"/>
                <TableColumn fx:id="queenSeenColumn" text="%table.queen_seen" prefWidth="100"/>
                <TableColumn fx:id="aggressionColumn" text="%table.aggression" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="%status.select_hive"/>
        </HBox>
    </bottom>

</BorderPane>
