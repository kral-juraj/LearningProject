<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.TaxationListController">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button fx:id="addButton" text="Nová taxácia" onAction="#handleAddTaxation"/>
            <Button fx:id="viewButton" text="Zobraziť/Upraviť" onAction="#handleViewTaxation"/>
            <Button fx:id="deleteButton" text="Zmazať" onAction="#handleDeleteTaxation"/>
            <Separator orientation="VERTICAL"/>
            <Button text="Obnoviť" onAction="#handleRefresh"/>
        </ToolBar>
    </top>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="taxationTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Dátum" prefWidth="150"/>
                <TableColumn fx:id="hiveNameColumn" text="Úľ" prefWidth="100"/>
                <TableColumn fx:id="temperatureColumn" text="Teplota (°C)" prefWidth="90"/>
                <TableColumn fx:id="totalFramesColumn" text="Počet rámikov" prefWidth="100"/>
                <TableColumn fx:id="foodStoresColumn" text="Zásoby (kg)" prefWidth="90"/>
                <TableColumn fx:id="totalPollenColumn" text="Peľ (dm)" prefWidth="80"/>
                <TableColumn fx:id="totalCappedStoresColumn" text="Zav. zásoby (dm)" prefWidth="120"/>
                <TableColumn fx:id="totalUncappedStoresColumn" text="Nezav. zásoby (dm)" prefWidth="130"/>
                <TableColumn fx:id="totalCappedBroodColumn" text="Zav. plod (dm)" prefWidth="110"/>
                <TableColumn fx:id="totalUncappedBroodColumn" text="Otv. plod (dm)" prefWidth="110"/>
                <TableColumn fx:id="totalStarterFramesColumn" text="Stav. rám." prefWidth="90"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="Vyberte úľ"/>
        </HBox>
    </bottom>

</BorderPane>
