<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.HiveListController">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button fx:id="addButton" text="%button.add_hive" onAction="#handleAddHive"/>
            <Button fx:id="editButton" text="%button.edit" onAction="#handleEditHive"/>
            <Button fx:id="deleteButton" text="%button.delete" onAction="#handleDeleteHive"/>
            <Button fx:id="toggleActiveButton" text="%button.toggle_active" onAction="#handleToggleActive"/>
            <Separator orientation="VERTICAL"/>
            <Button fx:id="showInspectionsButton" text="%button.show_inspections" onAction="#handleShowInspections" style="-fx-font-weight: bold;"/>
            <Separator orientation="VERTICAL"/>
            <Button text="%button.refresh" onAction="#handleRefresh"/>
        </ToolBar>
    </top>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="hiveTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="%table.name" prefWidth="250"/>
                <TableColumn fx:id="typeColumn" text="%table.type" prefWidth="150"/>
                <TableColumn fx:id="activeColumn" text="%table.active" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="%status.select_apiary"/>
        </HBox>
    </bottom>

</BorderPane>
