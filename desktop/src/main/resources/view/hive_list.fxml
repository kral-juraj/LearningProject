<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.HiveListController">

    <!-- Left Sidebar with Buttons -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">
            <Button fx:id="addButton" text="%button.add_hive" onAction="#handleAddHive" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="editButton" text="%button.edit" onAction="#handleEditHive" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="deleteButton" text="%button.delete" onAction="#handleDeleteHive" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="toggleActiveButton" text="%button.toggle_active" onAction="#handleToggleActive" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Separator/>
            <Button fx:id="showInspectionsButton" text="%button.show_inspections" onAction="#handleShowInspections" maxWidth="Infinity" style="-fx-font-weight: bold; -fx-padding: 8;"/>
            <Separator/>
            <Button text="%button.refresh" onAction="#handleRefresh" maxWidth="Infinity" style="-fx-padding: 8;"/>
        </VBox>
    </left>

    <!-- Center - Compact Grid with Cards -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #f5f5f5;">
            <FlowPane fx:id="hiveGridPane" hgap="15" vgap="15" alignment="TOP_LEFT">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </FlowPane>
        </ScrollPane>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="%status.select_apiary"/>
        </HBox>
    </bottom>

</BorderPane>
