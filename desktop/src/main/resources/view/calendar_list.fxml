<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.CalendarEventListController">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button fx:id="addButton" text="%button.add_event" onAction="#handleAddEvent"/>
            <Button fx:id="editButton" text="%button.edit" onAction="#handleEditEvent"/>
            <Button fx:id="deleteButton" text="%button.delete" onAction="#handleDeleteEvent"/>
            <Separator orientation="VERTICAL"/>
            <Button fx:id="toggleButton" text="%button.toggle_completed" onAction="#handleToggleCompleted"/>
            <Separator orientation="VERTICAL"/>
            <Button text="%button.refresh" onAction="#handleRefresh"/>
        </ToolBar>
    </top>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="eventTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="%table.date" prefWidth="180"/>
                <TableColumn fx:id="titleColumn" text="%table.title" prefWidth="200"/>
                <TableColumn fx:id="typeColumn" text="%table.type" prefWidth="120"/>
                <TableColumn fx:id="descriptionColumn" text="%table.description" prefWidth="200"/>
                <TableColumn fx:id="completedColumn" text="%table.completed" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="%status.loading_events"/>
        </HBox>
    </bottom>

</BorderPane>
