<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
          hgap="10" vgap="10" prefWidth="500" prefHeight="450">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Row 0: Title -->
    <HBox spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label text="*" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
        <Label text="%label.title"/>
    </HBox>
    <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <!-- Row 1: Date -->
    <HBox spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Label text="*" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
        <Label text="%label.date"/>
    </HBox>
    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2" maxWidth="Infinity"/>

    <!-- Row 2: Time -->
    <Label text="%label.time" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2">
        <TextField fx:id="hourField" promptText="HH" prefWidth="50" maxWidth="50"/>
        <Label text=":"/>
        <TextField fx:id="minuteField" promptText="MM" prefWidth="50" maxWidth="50"/>
    </HBox>

    <!-- Row 3: Event Type -->
    <HBox spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Label text="*" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
        <Label text="%label.type"/>
    </HBox>
    <ComboBox fx:id="eventTypeCombo" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2" maxWidth="Infinity"/>

    <!-- Row 4: Apiary -->
    <Label text="%label.apiary" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <ComboBox fx:id="apiaryCombo" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2" maxWidth="Infinity"/>

    <!-- Row 5: Hive -->
    <Label text="%label.hive" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <ComboBox fx:id="hiveCombo" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2" maxWidth="Infinity"/>

    <!-- Row 6: Description -->
    <Label text="%label.description" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="2"/>

    <!-- Row 7: Completed -->
    <Label text="%label.completed" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <CheckBox fx:id="completedCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <!-- Row 8: Notes -->
    <Label text="%label.notes" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.valignment="TOP"/>
    <TextArea fx:id="notesArea" GridPane.columnIndex="1" GridPane.rowIndex="8" GridPane.columnSpan="2"
              prefHeight="100" wrapText="true"/>

    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="150"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="150"/>
    </columnConstraints>

</GridPane>
