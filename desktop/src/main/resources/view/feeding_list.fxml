<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.FeedingListController">

    <!-- Left Sidebar with Buttons -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f0f0f0; -fx-border-color: #ddd; -fx-border-width: 0 1 0 0;">
            <Button fx:id="addButton" text="%button.add_feeding" onAction="#handleAddFeeding" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="editButton" text="%button.edit" onAction="#handleEditFeeding" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Button fx:id="deleteButton" text="%button.delete" onAction="#handleDeleteFeeding" maxWidth="Infinity" style="-fx-padding: 8;"/>
            <Separator/>
            <Button text="%button.refresh" onAction="#handleRefresh" maxWidth="Infinity" style="-fx-padding: 8;"/>
        </VBox>
    </left>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="feedingTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="%table.date" prefWidth="180"/>
                <TableColumn fx:id="feedTypeColumn" text="%table.feed_type" prefWidth="150"/>
                <TableColumn fx:id="amountColumn" text="%table.amount" prefWidth="130"/>
                <TableColumn fx:id="weightBeforeColumn" text="%table.weight_before" prefWidth="150"/>
                <TableColumn fx:id="weightAfterColumn" text="%table.weight_after" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="%status.select_hive"/>
        </HBox>
    </bottom>

</BorderPane>
