                            <Button fx:id="editTreatmentButton" text="Upravi콘" onAction="#handleEditTreatment" disable="true"/>
                            <Button fx:id="deleteTreatmentButton" text="Zmaza콘" onAction="#handleDeleteTreatment" disable="true"/>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- Chart -->
