<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.beekeeper.desktop.controller.CalculatorsController"
            stylesheets="@../styles/calculators.css">

    <VBox spacing="15" style="-fx-padding: 20;">

        <!-- ========== VARROA CALCULATOR ========== -->
        <TitledPane text="%calculator.varroa.title" expanded="true" collapsible="true">
            <VBox spacing="10" style="-fx-padding: 10;">

                <!-- Top Section: Inputs (left) and Treatments Table (right) -->
                <HBox spacing="15">
                    <!-- Left: Input Section -->
                    <VBox spacing="10" prefWidth="400">
                        <GridPane hgap="10" vgap="8">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" prefWidth="120"/>
                                <ColumnConstraints minWidth="180" prefWidth="180" hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="%label.varroa_count" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="varroaCountField" promptText="Napr. 50"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="%label.measurement_date" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <DatePicker fx:id="varroaMeasurementDate"
                                        GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="%label.brood_present" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <CheckBox fx:id="varroaBroodPresent" selected="true"
                                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="%label.projection" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                <ComboBox fx:id="varroaProjectionDays" prefWidth="80"/>
                                <Label text="%label.days"/>
                            </HBox>

                            <Label text="%label.drone_brood_percent" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                <TextField fx:id="varroaDroneBroodField" promptText="10" prefWidth="60"/>
                                <Label text="%%"/>
                            </HBox>
                        </GridPane>

                        <!-- Buttons -->
                        <VBox spacing="8" style="-fx-padding: 10 0 0 0;">
                            <Button text="%button.calculate" onAction="#handleVarroaCalculate" maxWidth="Infinity"
                                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                            <Button text="%button.clear" onAction="#handleVarroaClear" maxWidth="Infinity"/>
                            <Button text="%button.settings" onAction="#handleVarroaSettings" maxWidth="Infinity"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                            <Button fx:id="varroaExportButton" text="%button.export_calendar" maxWidth="Infinity"
                                    onAction="#handleVarroaExport" disable="true"/>
                        </VBox>
                    </VBox>

                    <!-- Right: Treatments Section -->
                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="%label.treatment_plan" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>

                        <!-- Treatments Table -->
                        <TableView fx:id="varroaTreatmentsTable" prefHeight="200">
                            <columns>
                                <TableColumn fx:id="treatmentDateColumn" text="%table.date" prefWidth="100"/>
                                <TableColumn fx:id="treatmentTypeColumn" text="%table.treatment_type" prefWidth="150"/>
                                <TableColumn fx:id="treatmentEffectivenessColumn" text="%table.effectiveness" prefWidth="80"/>
                                <TableColumn fx:id="treatmentDescColumn" text="%table.note" prefWidth="180"/>
                            </columns>
                        </TableView>

                        <!-- Treatment Buttons -->
                        <HBox spacing="8">
                            <Button text="%button.add" onAction="#handleAddTreatment"
                                    style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
                            <Button fx:id="editTreatmentButton" text="%button.edit" onAction="#handleEditTreatment" disable="true"/>
                            <Button fx:id="deleteTreatmentButton" text="%button.delete" onAction="#handleDeleteTreatment" disable="true"/>
                        </HBox>
                    </VBox>
                </HBox>

                <!-- Chart -->
                <LineChart fx:id="varroaChart" prefHeight="300" createSymbols="true"
                           legendVisible="false">
                    <xAxis>
                        <NumberAxis label="%label.date" side="BOTTOM" fx:id="varroaChartXAxis" tickUnit="1"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="%label.varroa_count" side="LEFT"/>
                    </yAxis>
                </LineChart>

                <!-- Results -->
                <VBox spacing="5" fx:id="varroaResultsBox" visible="false">
                    <Label fx:id="varroaStatusLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>
                    <TextArea fx:id="varroaRecommendationArea" wrapText="true" editable="false"
                              prefRowCount="6" style="-fx-font-size: 12px;"/>
                </VBox>

            </VBox>
        </TitledPane>

        <!-- ========== QUEEN REARING CALCULATOR ========== -->
        <TitledPane text="%calculator.queen.title" expanded="false" collapsible="true">
            <VBox spacing="10" style="-fx-padding: 10;">

                <!-- Input Section -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="%label.start_date" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <DatePicker fx:id="queenStartDate"
                                GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="%label.method" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="queenMethodCombo" prefWidth="200"
                              GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>

                <!-- Buttons -->
                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button text="%button.calculate" onAction="#handleQueenCalculate"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="%button.clear" onAction="#handleQueenClear"/>
                    <Button fx:id="queenExportButton" text="%button.export_milestones"
                            onAction="#handleQueenExport" disable="true"/>
                </HBox>

                <!-- Milestones Table -->
                <TableView fx:id="queenMilestonesTable" prefHeight="250">
                    <columns>
                        <TableColumn fx:id="queenDayColumn" text="%table.day" prefWidth="60"/>
                        <TableColumn fx:id="queenDateColumn" text="%table.date" prefWidth="100"/>
                        <TableColumn fx:id="queenNameColumn" text="%table.milestone" prefWidth="180"/>
                        <TableColumn fx:id="queenDescColumn" text="%table.description" prefWidth="350"/>
                    </columns>
                </TableView>

            </VBox>
        </TitledPane>

        <!-- ========== FEED CALCULATOR ========== -->
        <TitledPane text="%calculator.feed.title" expanded="false" collapsible="true">
            <VBox spacing="10" style="-fx-padding: 10;">

                <!-- Input Section -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" prefWidth="150"/>
                        <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="%label.current_stores" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <TextField fx:id="feedCurrentStoresField" promptText="Napr. 5.0" prefWidth="150"/>
                        <Label text="%label.kg"/>
                    </HBox>

                    <Label text="%label.target_stores" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <TextField fx:id="feedTargetStoresField" promptText="Napr. 20.0" prefWidth="150"/>
                        <Label text="%label.kg"/>
                    </HBox>

                    <Label text="%label.feed_type" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="feedTypeCombo" prefWidth="200"
                              GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>

                <!-- Buttons -->
                <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
                    <Button text="%button.calculate" onAction="#handleFeedCalculate"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                    <Button text="%button.clear" onAction="#handleFeedClear"/>
                </HBox>

                <!-- Results -->
                <VBox spacing="10" fx:id="feedResultsBox" visible="false" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-radius: 5;">

                    <Label text="%label.calculation_results" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>

                    <GridPane hgap="10" vgap="5">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints minWidth="100" prefWidth="100"/>
                        </columnConstraints>

                        <Label text="Potrebné množstvo:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="feedNeededKgLabel" style="-fx-font-weight: bold;"
                               GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="V litroch:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="feedNeededLitersLabel" style="-fx-font-weight: bold;"
                               GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>

                    <Separator/>

                    <GridPane hgap="10" vgap="5" fx:id="feedIngredientsGrid">
                        <columnConstraints>
                            <ColumnConstraints minWidth="150" prefWidth="150"/>
                            <ColumnConstraints minWidth="100" prefWidth="100"/>
                        </columnConstraints>

                        <Label text="Cukor:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="feedSugarLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Voda:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="feedWaterLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>

                    <Separator/>

                    <Label text="Inštrukcie:" style="-fx-font-weight: bold;"/>
                    <TextArea fx:id="feedInstructionsArea" wrapText="true" editable="false"
                              prefRowCount="8" style="-fx-font-size: 11px;"/>

                </VBox>

            </VBox>
        </TitledPane>

    </VBox>

</ScrollPane>
