<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fitToWidth="true" prefWidth="600" prefHeight="650">
    <VBox spacing="15">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <!-- Section 1: Základné údaje -->
        <Label text="Základné údaje" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <HBox spacing="0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label text="*" style="-fx-text-fill: red; -fx-font-weight: bold;"/>
                <Label text=" Dátum:"/>
            </HBox>
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="0" maxWidth="Infinity"/>

            <Label text="Čas:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <TextField fx:id="hourField" promptText="HH" prefWidth="50" maxWidth="50"/>
                <Label text=":"/>
                <TextField fx:id="minuteField" promptText="MM" prefWidth="50" maxWidth="50"/>
            </HBox>

            <Label text="Teplota (°C):" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="temperatureField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>
        </GridPane>

        <!-- Section 2: Sila a zásoby -->
        <Label text="Sila a zásoby" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <Label text="Odhad sily (1-10):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Slider fx:id="strengthSlider" min="1" max="10" value="5" showTickLabels="true" showTickMarks="true"
                        majorTickUnit="1" minorTickCount="0" snapToTicks="true" prefWidth="200"/>
                <Label fx:id="strengthLabel" text="5" style="-fx-font-weight: bold;"/>
            </HBox>

            <Label text="Zásoby (kg):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="foodStoresField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>
        </GridPane>

        <!-- Section 3: Rámiky a plod -->
        <Label text="Rámiky a plod" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <Label text="Celkový počet rámikov:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="totalFramesField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Plodové rámiky:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="broodFramesField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Peľové rámiky:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="pollenFramesField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Zapečatený plod (dm):" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="cappedBroodField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Nezapečatený plod (dm):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="uncappedBroodField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>
        </GridPane>

        <!-- Section 4: Matka -->
        <Label text="Matka" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <Label text="Matka videná:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <CheckBox fx:id="queenSeenCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Poznámka o matke:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="queenNoteField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>
        </GridPane>

        <!-- Section 5: Varroa -->
        <Label text="Varroa" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <Label text="Varroa prítomná:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <CheckBox fx:id="varroaCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Počet varry:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="varroaCountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>
        </GridPane>

        <!-- Section 6: Správanie -->
        <Label text="Správanie" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <GridPane hgap="10" vgap="10">
            <Label text="Agresivita (1-5):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Slider fx:id="aggressionSlider" min="1" max="5" value="1" showTickLabels="true" showTickMarks="true"
                        majorTickUnit="1" minorTickCount="0" snapToTicks="true" prefWidth="200"/>
                <Label fx:id="aggressionLabel" text="1" style="-fx-font-weight: bold;"/>
            </HBox>

            <Label text="Správanie:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="behaviorField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="200"/>
            </columnConstraints>
        </GridPane>

        <!-- Section 7: Poznámky -->
        <Label text="Poznámky" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <Separator/>
        <TextArea fx:id="notesArea" wrapText="true" prefHeight="100"/>

    </VBox>
</ScrollPane>
