<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.CalendarEventListController">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button fx:id="addButton" text="Nová udalosť" onAction="#handleAddEvent"/>
            <Button fx:id="editButton" text="Upraviť" onAction="#handleEditEvent"/>
            <Button fx:id="deleteButton" text="Zmazať" onAction="#handleDeleteEvent"/>
            <Separator orientation="VERTICAL"/>
            <Button fx:id="toggleButton" text="Prepnúť dokončenie" onAction="#handleToggleCompleted"/>
            <Separator orientation="VERTICAL"/>
            <Button text="Obnoviť" onAction="#handleRefresh"/>
        </ToolBar>
    </top>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="eventTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" text="Dátum" prefWidth="180"/>
                <TableColumn fx:id="titleColumn" text="Názov" prefWidth="200"/>
                <TableColumn fx:id="typeColumn" text="Typ" prefWidth="120"/>
                <TableColumn fx:id="descriptionColumn" text="Popis" prefWidth="200"/>
                <TableColumn fx:id="completedColumn" text="Dokončené" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="Načítavam udalosti..."/>
        </HBox>
    </bottom>

</BorderPane>
