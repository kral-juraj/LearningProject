<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.beekeeper.desktop.controller.HiveListController">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button fx:id="addButton" text="Pridať úľ" onAction="#handleAddHive"/>
            <Button fx:id="editButton" text="Upraviť" onAction="#handleEditHive"/>
            <Button fx:id="deleteButton" text="Zmazať" onAction="#handleDeleteHive"/>
            <Button fx:id="toggleActiveButton" text="Zmeniť stav" onAction="#handleToggleActive"/>
            <Separator orientation="VERTICAL"/>
            <Button text="Obnoviť" onAction="#handleRefresh"/>
        </ToolBar>
    </top>

    <!-- Center - Table View -->
    <center>
        <TableView fx:id="hiveTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="nameColumn" text="Názov" prefWidth="250"/>
                <TableColumn fx:id="typeColumn" text="Typ" prefWidth="150"/>
                <TableColumn fx:id="activeColumn" text="Aktívny" prefWidth="100"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox style="-fx-background-color: #f9f9f9; -fx-padding: 8;">
            <Label fx:id="statusLabel" text="Vyberte včelnicu"/>
        </HBox>
    </bottom>

</BorderPane>
